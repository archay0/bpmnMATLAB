{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BPMN Pools Schema",
  "description": "Schema for defining pools in BPMN diagrams",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["pool_id", "pool_name", "process_id", "description"],
    "properties": {
      "pool_id": {
        "type": "string",
        "description": "Unique identifier for the pool",
        "pattern": "^POOL_[0-9]{3}$"
      },
      "pool_name": {
        "type": "string",
        "description": "Descriptive name of the pool"
      },
      "process_id": {
        "type": "string",
        "description": "Reference to the process this pool belongs to"
      },
      "description": {
        "type": "string",
        "description": "Description of the pool's purpose"
      },
      "participant_type": {
        "type": "string",
        "description": "Type of participant (organization, department, system, role)",
        "enum": ["organization", "department", "system", "role"]
      }
    }
  }
}